{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true, // Allow .js files (if you have any left)
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "outDir": "./dist" // Compile files into a separate folder
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"], // Only include .ts/.tsx files
  "exclude": [
    "src/**/*.js", // Exclude .js files to avoid conflicts
    "node_modules"
  ]
}
